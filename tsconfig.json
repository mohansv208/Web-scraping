{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,          // Add this line to generate .d.ts files
    "declarationMap": true        // (Optional) Generates source maps for declarations
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
